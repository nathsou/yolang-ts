
fun fib(n) {
  mut i = 0u64
  mut a = 1u64
  mut b = 0

  while i < n {
    let c = a + b
    b = a
    a = c
    i += 1
  }

  b
}

fun pb2() {
  mut nextFib = fib(0)
  mut i = 0u64
  mut sum = 0

  while nextFib < 4000000 {
    if nextFib.even() {
      sum += nextFib
    }

    i += 1 
    nextFib = fib(i)
  }

  sum
}

fun main() {
  print(pb2())
}
