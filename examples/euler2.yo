
fun fib(n) {
  mut a = 1
  mut b = 0
  mut i = 0

  while i < n {
    let c = a + b
    b = a
    a = c
    i += 1
  }

  b
}

fun euler2() {
  mut nextFib = fib(0)
  mut i = 0
  mut sum = 0

  while nextFib < 4000000 {
    if nextFib & 1 == 0 {
      sum += nextFib
    }

    i += 1 
    nextFib = fib(i)
  }

  sum
}

fun main() {
  euler2()
}
